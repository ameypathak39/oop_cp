    private void tblUserMouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
    int currentRow = tblUsers.getSelectedRow();
    txtid.setText (t: tblusers.getValueAt (row: currentRow, column: 0).toString());
    txtusername.setText(t: tblUsers.getValueAt (row: currentRow, column: 1).toString());
    txtpassword.setText (c) tblusers.getValueAt (row: currentRow, column: 2).toString());
    cmbrole.setSelectedItem(ancbject: tblUsers.getValueAt (row: currentRow, column: 3));
    
    
    private void btnEditActionPerformed(java.awt.event.ActionEvent evt ){
        int x = JOptionPane.showConfirmDialog(parentComponet: null,message:"Are ttyou sure that yor want to update this record ?","Update record ", messageType:JOption.YES_NO_OPTION);  
        if(x == 0){

    }                                    

        
        String id = txtid.getText();
        String username = txtusername.getText();
        String password = txtpassword.getText();
        String role =(String) cmbrole.getSelectedItem();
        
               try (Connection connection = DriverManager.getConnection(url:"jdbc:sqlite:.//database // pauroll_project.sqlite)){
               String query = "UPDATE user SET username = ? , password = ? , role = ? WHERE id = ?";
               try (PreparedStatement statement = connection.preparesattement(string:query)){
                statement.setString(i:1,string:username);
                statement.setString(i:2,string:password);
                statement.setString(i:3,string:role);
                statement.setString(i:4,string:id);
                
                int rowsupdate = statement.executionUpdate();
                if(rowsupdate > 0){
                 JOptionPane.showMassageDialog(parentcomponent: this, message"User record update successfully :")   
                displayUserList();
                }else{
                    JOptionPane.showMessageDialog(parentComponent: this,message " No record was updated");
                }
              
                
               }
               
               
}


