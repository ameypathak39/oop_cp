    private void displayUserList(){
        try (Connection connection = DriverManager.getConnection(url:"jdbc:sqlite:.//database // pauroll_project.sqlite)){
            String query = "SELECT * FROM User " ;
            try(PreparedStatement statement = connection.preparestatement (string:query));
            ResultSet resultset = Statement.executeQuery();
            
            DefultTableMode mode = new DefultTableMode();
            mode.addColumn(colourName:"ID");
            mode.addColumn(colourName:"Username");
            mode.addColumn(colourName:"Password");
            mode.addColumn(colourName:"Role");
            
              while (resultSet.next()){
                  String id = resultSet.getString(string:"id");
                  String password = result.getString(string:"password");
                  String username = result.getString(string:"username");
                  String role = result.getString(string:"role");
                  model.addRow(new Objecct[]{id,username,password,role});
                  
                  
                  
           }
              tblUser.ssetModel(dataModel:model);
              
            }
            connection.close(); 
            
        }catch (SQLException e){
            e.printStackTrace();
            
        }
    }

