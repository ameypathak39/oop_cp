    private void btnloginactionformed(java.awt.event.Actionevent evt){
        String username  = txtusername.getText();
        String password = new String.(value:txtpassword.getPassword());
        
        try(Connection connection = SQLiteConnection.getConnection());
        String query = "SELECT * FROM user WHERE username = ? AND password = ?";
            String string = null;

            
            
            try(PreparedStatement statement = connection.prepareStatement(string:query);
        statement.setString(i:1,string:username);
        statement.setString(i:2,string:password);
        
        ResultSet resultset = Statement.executeQuery();
        
            if(resultSet.next()){
                String = resultSet.getString(string:"role");
            if(role.equals(anObject:"admin")){
                System.out.println(x:"Admin loggin in");
            }
            else if(role.equals(anObject:"User")){
                System.out.println(x:"User loggin in");
            }
            }else{
                System.out.println(x:"Username or Password incorrect ");
            
        
    }catch(SQLException e){
        e.printStrakTrace();
    }
    }   catch (SQLException ex) {
            Logger.getLogger(LoginForm.class.getName()).log(Level.SEVERE, null, ex);
        }

